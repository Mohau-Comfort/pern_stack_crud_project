{
    "openapi": "3.0.0",
    "info": {
      "title": "PERN Stack CRUD API",
      "description": "API documentation for PERN Stack CRUD application",
      "version": "1.0.0",
      "contact": {
        "name": "API Support"
      }
    },
    "servers": [
      {
        "url": "http://localhost:5000",
        "description": "Development server"
      }
    ],
    "tags": [
      {
        "name": "Clients",
        "description": "API for clients in the system"
      }
    ],
    "paths": {
      "/api/clients": {
        "get": {
          "tags": ["Clients"],
          "summary": "Get all clients",
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Client"
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Client": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 1
            },
            "name": {
              "type": "string",
              "example": "Tom Cruise"
            },
            "email": {
              "type": "string",
              "example": "tom@email.com"
            },
            "job": {
              "type": "string",
              "example": "Software Engineer"
            },
            "rate": {
              "type": "string",
              "example": "$150/hr"
            },
            "status": {
              "type": "string",
              "enum": ["Active", "Inactive", "Available"],
              "example": "Active"
            },
            "created_at": {
              "type": "string",
              "format": "date-time"
            },
            "updated_at": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }